page, .container {
  background: #f3f4f6;
}

.orderLists {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.orderLists .order_item {
  background: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  margin-bottom: 20rpx;
}

.orderLists .order_item ._bt {
  height: 36rpx;
  line-height: 36rpx;
  display: flex;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
  margin-bottom: 33rpx;
}

.orderLists .order_item ._bt image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 5rpx;
}

.orderLists .order_item ._bd {
  border-left: 6rpx solid #31ce9e;
  margin: 0 8rpx;
  box-sizing: border-box;
}

.orderLists ._bd .street_name {
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFangSC;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
  line-height: 48rpx;
  display: flex;
  align-items: center;
  padding-left: 19rpx;
  box-sizing: border-box;
  flex-wrap: wrap;
  margin-bottom: 4rpx;
}

.orderLists ._bd .detail_ad {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 48rpx;
  padding: 5rpx 0 5rpx 19rpx;
  margin-bottom: 10rpx;
}

.orderLists .time_part {
  padding-top: 22rpx;
  display: flex;
  color: #888;
  line-height: 36rpx;
}

.orderLists .time_part image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 5rpx;
}

/* 取货详情 */

.goods_detail ._title {
  display: flex;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 42rpx;
  align-items: center;
  margin-bottom: 14rpx;
}

.goods_detail ._title image {
  width: 18rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.goods_detail .goods_list {
  display: flex;
  justify-content: space-between;
  padding:0 14rpx;
  box-sizing:border-box;
}

.goods_detail .goods_list ._item {
  background: #D9F5FF;
  border-radius: 8rpx;
  padding: 33rpx 0 40rpx;
  width: 296rpx;
  text-align: center;
  box-sizing:border-box;
}
.goods_detail .goods_list ._item.fabric {
  background: #D9F5FF;
}
.goods_detail .goods_list ._item image {
  width: 120rpx;
  height: 120rpx;
  display:block;
  margin:0 auto;
}
.goods_detail .goods_list ._item image._fabric{
  display:none;
}
.goods_detail .goods_list ._item.fabric image {
  display:none;
}
.goods_detail .goods_list ._item.fabric image._fabric{
  display:block;
}

.goods_detail .goods_list .desc {
  font-size: 26rpx;
  font-weight: 400;
  color: #61B9FF;
  line-height:46rpx;
}
.goods_detail ._item.fabric .desc{
  color:rgba(0, 179, 149, 1);
}

.goods_detail .goods_list ._price {
  font-size: 42rpx;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  line-height:92rpx;
}
