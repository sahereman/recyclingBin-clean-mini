
view{
  box-sizing:border-box;
}
.setting_nav{
  padding:0 46rpx;
  background:#fff;
}
.setting_nav .setting_item{
  border-bottom:1px solid #F1F1F1;
  font-size:34rpx;
  color:#222;
  padding-top:12rpx;
  line-height:92rpx;
  position:relative;
  display:flex;
  align-items:center;
}
.setting_nav .setting_item .go_page{
  position:absolute;
  width:32rpx;
  height:34rpx;
  right:0;
  top:40rpx;
}
.setting_nav .setting_item  ._icon{
  width:64rpx;
  margin:0 10rpx;
}

.top_accountt{
  background:#fff;
  position:relative;
  height:346rpx;
  overflow:hidden;
}
.top_accountt .cir_bg{
  height:90%;
  position:absolute;
  width:870rpx;
  left:-60rpx;
  top:0;
  border-bottom-left-radius:45%;
  border-bottom-right-radius:45%;
  padding-top:20rpx;
  overflow:hidden;
  text-align:center;
  background:#F3F4F6;
}
.top_accountt ._bannner{
  border-radius:30rpx;
  width:730rpx;
  margin:0 auto;
}
.top_accountt .bd_con{
  position:absolute;
  left:176rpx;
  top:78rpx;
}
.top_accountt .bd_con ._number{
  color:#fff;
  font-weight:600;
  font-size:58rpx;
  line-height:80rpx;
}
.top_accountt .bd_con ._unit{
  color:#fff;
  line-height:48rpx;
  font-size:28rpx;
  position:relative;
  display:flex;
  align-items:center;
}
.top_accountt .bd_con ._unit .go_my_money{
  width:32rpx;
  height:32rpx;
  position:absolute;
  left:150rpx;
  top:12rpx;
}

.top_accountt .bd_con ._unit text{
  display:block;
  width:1px;
  height:20rpx;
  background:#fff;
  margin:0 20rpx;
}





